<body>
  <div class='flex-container'>
    <div class="flex-items" id="title">
      <h3>User Log In<h3>
    </div>

    <div class="flex-items" id="login_form">
      <div id="register-form">
      <%= form_with url: sessions_path, method: :post, local: true do |f| %>
        <%= f.label :email %>
        <%= f.email_field :email, required: true %><br><br>

        <%= f.label :password %>
        <%= f.password_field :password, required: true, pattern: '^(?=.*[A-Za-z])[A-Za-z\d]{4,}' %><br><br>

        <%= f.submit "Log In", class: 'button1' %>
      <% end %>
    </div>
  </div>
</body>