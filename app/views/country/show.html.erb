<br><center><h1 style="font-family: Comic Sans MS"><%= @resources.country %><h1><center><br>

<div class="container">
  <iframe width="750" height="450" src="https://www.youtube.com/embed/<%= @resources.video[:youtube_video_id] %>"></iframe>
</div><br>

<div class="container" style="width: 1000px">
  <div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
    <ol class="carousel-indicators">
      <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
      <% (@resources.images.count - 1).times do %>
        <% count = 1 %>
        <li data-target="#carouselExampleIndicators" data-slide-to="<% count %> "></li>
        <% count += 1%>
      <% end %>
    </ol>
    <div class="carousel-inner">
      <div class="carousel-item active">
        <img class="d-block w-100" src="<%= @resources.images[0][:url] %>" alt="<%= @resources.images[0][:alt_tag] %>">
        <div class="carousel-caption d-none d-md-block">
          <p class="h6"><%= @resources.images[0][:alt_tag]%></p>
        </div>
      </div>
      <% @resources.images.shift %>
      <% @resources.images.each do |image| %>
        <div class="carousel-item">
          <img class="d-block w-100" src="<%= image[:url]%>" alt="<%= image[:alt_tag] %>">
          <div class="carousel-caption d-none d-md-block">
            <p class="h6"><%= image[:alt_tag]%></p>
          </div>
        </div>
      <% end %>
    </div>
    <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
      <span class="carousel-control-prev-icon" aria-hidden="true"></span>
      <span class="sr-only">Previous</span>
    </a>
    <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
      <span class="carousel-control-next-icon" aria-hidden="true"></span>
      <span class="sr-only">Next</span>
    </a>
  </div>
